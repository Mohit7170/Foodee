<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tv">
        <item name="android:textColor">@color/font_black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="tv.heading">
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv.xtralarge">
        <item name="android:textSize">@dimen/text_size_xtra_large</item>
    </style>

    <style name="tv.large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="tv.mid">
        <item name="android:textSize">@dimen/text_size_mid</item>
    </style>

    <style name="tv.normal">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="tv.small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="tv.xtrasmall">
        <item name="android:textSize">@dimen/text_size_xtra_small</item>
    </style>


    <style name="et">
        <item name="android:textColor">@color/font_black</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="et.normal">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="btn_style">
        <item name="android:textColor">@color/white</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btn_style.large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundRectangleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>

